public class VendingMachine {

	public static void main(String[] args) {
		
		int cola;                //콜라 변수 선언
		int macol;               //맥콜 변수 선언
		int cider;               //사이다 변수 선언
		int fanta;               //환타 변수 선언
		int retsbe;              //레쓰비 변수 선언
		int top;                 //TOP 변수 선언
		int georgia;             //조지아 변수 선언
		int oranc;               //오란씨 변수 선언
		int carbonatedWater;     //탄산수 변수 선언
		int water;               //물 변수 선언
		
		cola = 1400;             //콜라 가격
		macol = 1600;            //맥콜 가격
		cider = 1400;            //사이다 가격
		fanta = 1600;            //환타 가격
		retsbe = 1000;           //레쓰비 가격
		top = 2000;              //TOP 가격
		georgia = 1800;          //조지아 가격
		oranc = 1000;            //오란씨 가격
		carbonatedWater = 2500;  //탄산수 가격
		water = 500;             //물 가격
		
		System.out.println("\t    ☆음료 자판기☆");
		System.out.println("");
		System.out.println("\t       메뉴");
		System.out.println("┌────────────────┬──────────────┐");
		System.out.println("│1.콜라("+cola+")\t │2.맥콜("+macol+")\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│3.사이다("+cider+")\t │4.환타("+fanta+")\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│5.레쓰비("+retsbe+")\t │6.TOP("+top+")\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│7.조지아("+georgia+")\t │8.오란C("+oranc+")\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│9.탄산수("+carbonatedWater+")\t │10.생수("+water+")\t│");
		System.out.println("└────────────────┴──────────────┘");
		System.out.println("");
		System.out.println("금액을\\ 투입하세요.");


	}

}
