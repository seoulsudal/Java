package carracing;

import javax.swing.*;

public class CarGame1 extends JFrame {

	private static final long serialVersionUID = 1L;
	
	class MyThread extends Thread{
		private JLabel label;
		private int x, y;
		
		public MyThread(String fname, int x, int y) {
			this.x = x;
			this.y = y;
			label = new JLabel();
			label.setIcon(new ImageIcon(fname));
			label.setBounds(x, y, 100, 100);
			add(label);
		}
		
		public void run() {
			for(int i = 0; i < 200; i++) {
				x += 10 * Math.random();
				label.setBounds(x, y, 100, 100);;
				repaint();
				try {
					Thread.sleep(100);
				} catch(InterruptedException e) {
					e.printStackTrace();
				}
			}
		}	
	}
	
	public CarGame1() {
		setTitle("CarRace");
		setSize(1100, 230);
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLayout(null);
		
		(new MyThread("ca1.gif", 100, 0)).start();
		(new MyThread("ca2.gif", 100, 0)).start();
		(new MyThread("ca3.gif", 100, 0)).start();
		setVisible(true);
	}
}
