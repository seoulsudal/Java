import java.util.Scanner;

public class Test10 {

	public static void main(String[] args) {

		Scanner input = new Scanner(System.in);
		
		String name;
		int age;
		String sex;
		String number;
		String adress;
		
		System.out.println("나의 신상정보를 입력하세요.");
		
		name = input.next();
		age = input.nextInt();
		sex = input.next();
		number = input.next();
		adress = input.nextLine();
		
		System.out.print("나의 이름은 "+name+"이고,");
		System.out.print("나이는 "+age+"살, ");
		System.out.print("성별은 "+sex+",");
		System.out.print("연락처는 "+number+",");
		System.out.print("주소는 "+adress+" 입니다.");
				
	}

}
