public class VendingMachine {

	public static void main(String[] args) {
		
		int cola;
		int macol;
		int cider;
		int fanta;
		int retsbe;
		int top;
		int georgia;
		int oranc;
		int carbonatedwater;
		int water;
		
		cola = 1400;
		macol = 1600;
		cider = 1400;
		fanta = 1600;
		retsbe = 1000;
		top = 2000;
		georgia = 1800;
		oranc = 1000;
		carbonatedwater = 2500;
		water = 500;
		
		System.out.println("\t    ☆음료 자판기☆");
		System.out.println("");
		System.out.println("\t       메뉴");
		System.out.println("┌────────────────┬──────────────┐");
		System.out.println("│1.콜라("+cola+")\t │2.맥콜("+macol+")\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│3.사이다("+cider+")\t │4.환타("+fanta+")\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│5.레쓰비(1,000)\t │6.TOP(2,000)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│7.조지아(1,800)\t │8.오란C(1,000)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│9.탄산수(2,500)\t │10.생수(500)\t│");
		System.out.println("└────────────────┴──────────────┘");
		System.out.println("");
		System.out.println("금액을 투입하세요.");


	}

}
