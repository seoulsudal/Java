import java.util.Scanner;

public class ConvertMilesToKilometers {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);	//스캐너 입력
		
		double mile;		//마일 변수 선언
		double kilometers;	//킬로미터 변수 선언
				
		System.out.println("마일을 입력하세요.");
		mile = input.nextDouble();
		
		kilometers = mile * 1.609;
				
		System.out.println("입력한 마일은 "+mile+"마일 이고, 킬로미터로 변환하면 "+kilometers+"킬로미터 입니다.");
		
		

	}

}
