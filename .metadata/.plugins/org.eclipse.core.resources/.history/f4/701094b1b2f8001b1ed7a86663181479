import java.util.Scanner;

public class CalculateTheVolumeOfASphere {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);	//스캐너 입력
		
		double radius;		//반지름 변수 선언
		double volme;		//부피 변수 선언
        double pi;			//원주율 변수 선언
        double formula;		//구의 부피 공식
		
        formula = 4/3;		//부피 공식 값 입력
		pi = 3.14;			//원주율 값 입력
		
		System.out.println("반지름을 입력하세요.");
		radius = input.nextDouble();
		
		volme = (double)( 4 / 3 ) * pi;
			
		System.out.println("반지름이 "+radius+"인 구의 부피는 "+formula+" 입니다.");

	}

}
