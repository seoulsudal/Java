
public class Test13 {

	public static void main(String[] args) {

		int a; // a변수 선언
		int b; // b변수 선언
		int c; // c변수 선언
		int d; // d변수 선언

		a = 10; // 변수 값 선언
		b = 10; // 변수 값 선언
		c = 10; // 변수 값 선언
		d = 10; // 변수 값 선언

		a++; // 증가 선언
		System.out.println(a);

		++a; // 증가 선언
		System.out.println(a);

		b--; // 감소 선언
		System.out.println(b);
		--b; // 감소 선언
		System.out.println(b);

		System.out.println(++c);
		System.out.println(d++);

	}

}
