import java.util.Scanner;

public class VendingMachine {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in); //스케너 선언
		
		int money;                  //투입금액 변수 선언
		int sum;                    //투입금액 합 변수 선언
		
		money = 0;
		sum = 0;
		
		sum = sum + money;
		
		int cola;                   //콜라 변수 선언
		int macol;                  //맥콜 변수 선언
		int cider;                  //사이다 변수 선언
		int fanta;                  //환타 변수 선언
		int retsbe;                 //레쓰비 변수 선언
		int top;                    //TOP 변수 선언
		int georgia;                //조지아 변수 선언
		int oranc;                  //오란씨 변수 선언
		int carbonatedWater;        //탄산수 변수 선언
		int water;                  //물 변수 선언
		
		String colaStr;		        //콜라 변수 선언
		String macolStr;            //맥콜 변수 선언
		String ciderStr;            //사이다 변수 선언
		String fantaStr;            //환타 변수 선언
		String retsbeStr;           //레쓰비 변수 선언
		String topStr;              //TOP 변수 선언
		String georgiaStr;          //조지아 변수 선언
		String orancStr;            //오란씨 변수 선언
		String carbonatedWaterStr;  //탄산수 변수 선언
		String waterStr;            //물 변수 선언

		cola = 1400;                //콜라 가격
		macol = 1600;               //맥콜 가격
		cider = 1400;               //사이다 가격
		fanta = 1600;               //환타 가격
		retsbe = 1000;              //레쓰비 가격
		top = 2000;                 //TOP 가격
		georgia = 1800;             //조지아 가격
		oranc = 1000;               //오란씨 가격
		carbonatedWater = 2500;     //탄산수 가격
		water = 500;                //물 가격
		
		colaStr = "콜라";            //콜라 이름
		macolStr = "맥콜";           //맥콜 이름
		ciderStr = "사이다";          //사이다 이름
		fantaStr = "환타";           //환타 이름
		retsbeStr = "레쓰비";         //레쓰비 이름
		topStr = "TOP";             //TOP 이름
		georgiaStr = "조지아";        //조지아 이름
		orancStr = "오란씨";          //오란씨 이름
		carbonatedWaterStr = "탄산수";//탄산수 이름
		waterStr = "물";             //물 이름
		
		System.out.println("\t    ☆음료 자판기☆");
		System.out.println("");
		System.out.println("\t        메뉴");
		System.out.println("┌────────────────┬──────────────┐");
		System.out.println("│1."+colaStr+"("+cola+"원)\t │2."+macolStr+"("+macol+"원)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│3."+ciderStr+"("+cider+"원)\t │4."+fantaStr+"("+fanta+"원)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│5."+retsbeStr+"("+retsbe+"원)\t │6."+topStr+"("+top+"원)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│7."+georgiaStr+"("+georgia+"원)\t │8."+orancStr+"("+oranc+"원)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│9."+carbonatedWaterStr+"("+carbonatedWater+"원)\t │10."+waterStr+"("+water+"원)\t│");
		System.out.println("└────────────────┴──────────────┘");
		System.out.println("");
		System.out.println("금액을 투입하세요.");
		
		money = input.nextInt();
		
		System.out.println("투입 금액 :"+money+"원");


	}

}
