import java.util.Scanner;

public class Test20 {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		int quantity;		//수량 변수 선언
		int amount;			//금액 변수 선언
		int discount;		//할인액 변수 선언
		int cashDiscount;	//할인금액 변수 선언
		int amountDue;		//지불금액 변수 선언
		
		System.out.println("금액을 입력하세요.");
		amount = input.nextInt();	//금액 입력
		
		System.out.println("수량을 입력하세요.");
		quantity = input.nextInt();	//수량 입력
		
		discount = 25/100;						//할인액 계산
		cashDiscount = amount - discount;					//할인금액 계산
		amountDue = ( amount - cashDiscount ) * quantity;	//지불금액 계산
				
		System.out.println(discount);
		System.out.println("단가는 "+amount+"원, 할인금액은 "+cashDiscount+"원 이고, 지불금액은 "+amountDue+"원 입니다.");
		
		

	}

}
