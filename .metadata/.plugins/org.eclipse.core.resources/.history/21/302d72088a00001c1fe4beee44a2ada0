import java.util.Scanner;

public class VendingMachine {

	public static void main(String[] args) {
		
		// 스케너 생성
		Scanner input = new Scanner(System.in); 
		
		// 변수 선언
		int money;                  // 투입금액
		int sum;                    // 투입금액 합
		sum = 0;                    // 투입금액 합 초기화
		
		char additionalInput;		// 추가 투입 여부
				
		int itemNumber;				// 물품번호
		char additionalPurchase;	// 추가 물품 구매여부
				
		int cola;                   // 콜라
		int macol;                  // 맥콜
		int cider;                  // 사이다
		int fanta;                  // 환타
		int retsbe;                 // 레쓰비
		int top;                    // TOP
		int georgia;                // 조지아
		int oranc;                  // 오란씨
		int carbonatedWater;        // 탄산수
		int water;                  // 물
		
		String colaStr;		        // 콜라 이름
		String macolStr;            // 맥콜 이름
		String ciderStr;            // 사이다 이름
		String fantaStr;            // 환타 이름
		String retsbeStr;           // 레쓰비 이름
		String topStr;              // TOP 이름
		String georgiaStr;          // 조지아 이름
		String orancStr;            // 오란씨 이름
		String carbonatedWaterStr;  // 탄산수 이름
		String waterStr;            // 물 이름

		// 변수 입력
		cola = 1400;                // 콜라 가격
		macol = 1600;               // 맥콜 가격
		cider = 1400;               // 사이다 가격
		fanta = 1600;               // 환타 가격
		retsbe = 1000;              // 레쓰비 가격
		top = 2000;                 // TOP 가격
		georgia = 1800;             // 조지아 가격
		oranc = 1000;               // 오란씨 가격
		carbonatedWater = 2500;     // 탄산수 가격
		water = 500;                // 물 가격
		
		colaStr = "콜라";            // 콜라 이름
		macolStr = "맥콜";           // 맥콜 이름
		ciderStr = "사이다";          // 사이다 이름
		fantaStr = "환타";           // 환타 이름
		retsbeStr = "레쓰비";         // 레쓰비 이름
		topStr = "TOP";             // TOP 이름
		georgiaStr = "조지아";        // 조지아 이름
		orancStr = "오란씨";          // 오란씨 이름
		carbonatedWaterStr = "탄산수";// 탄산수 이름
		waterStr = "물";             // 물 이름
		
		System.out.println("\t    ☆음료 자판기☆");
		System.out.println("");
		System.out.println("\t        메뉴");
		System.out.println("┌────────────────┬──────────────┐");
		System.out.println("│1."+colaStr+"("+cola+"원)\t │2."+macolStr+"("+macol+"원)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│3."+ciderStr+"("+cider+"원)\t │4."+fantaStr+"("+fanta+"원)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│5."+retsbeStr+"("+retsbe+"원)\t │6."+topStr+"("+top+"원)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│7."+georgiaStr+"("+georgia+"원)\t │8."+orancStr+"("+oranc+"원)\t│");
		System.out.println("├────────────────┼──────────────┤");
		System.out.println("│9."+carbonatedWaterStr+"("+carbonatedWater+"원)\t │10."+waterStr+"("+water+"원)\t│");
		System.out.println("└────────────────┴──────────────┘");
		System.out.println("");
		
		do {
			// 투입금액 입력
			System.out.println("금액을 투입하세요.");
			money = input.nextInt();     // 투입금액 스케너
			sum = sum + money;           // 추가 금액 합
				
			// 투입금액 출력
			System.out.println("투입 금액 : "+money+" 원");
			
			if(money < water) {
				System.out.println("최소 투입 금액이 모자랍니다.");
			}

				// 추가 투입 체크
				System.out.println("금액을 더 투입하시겠습니까?(Y/N)");
				additionalInput = input.next().charAt(0);
								
				if(additionalInput == 'N' || additionalInput == 'n') {
					// 상품의 최저가격 체크
					if(sum >= water) {
						System.out.println("총 투입금액은 "+sum+"원 입니다.");
						break;
					}
					else {
						System.out.println("총 반환금액은 "+sum+"원 입니다.");
						break;
					}
				}
				else if(additionalInput == 'Y' || additionalInput == 'y') {
					System.out.println("총 투입금액은 "+sum+"원 입니다.");
					System.out.println("금액을 투입하세요.");
					money = input.nextInt();     // 투입금액 스케너
					sum = sum + money;           // 추가 금액 합
				}
				else {
					System.out.println("버튼을 잘못 누르셨습니다.");
					System.out.println("다시 눌러주세요");
				}
			}while(true);

			if(sum >= water) {
				// 상품입력 반복
				do {
					// 상품번호 입력
					System.out.println("상품 번호를 입력하세요.(1~10)");
					itemNumber = input.nextInt();
					
					// 결과 출력
					switch(itemNumber) {
					case 1:
					case 3:
						// 상품 금액 체크
						if(sum >= cola) {
							sum = sum - cola;
							System.out.println("선택하신 제품이 나왔습니다.");
							System.out.println("제품의 금액은 "+cola+"원 이고 반환금은 "+sum+"원 입니다.");
							break;
						}
						else {
							System.out.println("금액이 "+(cola-sum)+"원 모자릅니다.");
							break;
						}
					case 2:
					case 4:
						if(sum >= macol) {
							sum = sum - macol;
							System.out.println("선택하신 제품이 나왔습니다.");
							System.out.println("제품의 금액은 "+macol+"원 이고 반환금은 "+sum+"원 입니다.");
							break;
						}
						else {
							System.out.println("금액이 "+(macol-sum)+"원 모자릅니다.");
							break;
						}
					case 5:
					case 8:
						if(sum >= retsbe) {
							sum = sum - retsbe;
							System.out.println("선택하신 제품이 나왔습니다.");
							System.out.println("제품의 금액은 "+retsbe+"원 이고 반환금은 "+sum+"원 입니다.");
							break;
						}
						else {
							System.out.println("금액이 "+(retsbe-sum)+"원 모자릅니다.");
							break;
						}
					case 6:
						if(sum >= top) {
							sum = sum - top;
							System.out.println("선택하신 제품이 나왔습니다.");
							System.out.println("제품의 금액은 "+top+"원 이고 반환금은 "+sum+"원 입니다.");
							break;
						}
						else {
							System.out.println("금액이 "+(top-sum)+"원 모자릅니다.");
							break;
						}
					case 7:
						if(sum >= georgia) {
							sum = sum - georgia;
							System.out.println("선택하신 제품이 나왔습니다.");
							System.out.println("제품의 금액은 "+georgia+"원 이고 반환금은 "+sum+"원 입니다.");
							break;
						}
						else {
							System.out.println("금액이 "+(georgia-sum)+"원 모자릅니다.");
							break;
						}
					case 9:
						if(sum >= carbonatedWater) {
							sum = sum - carbonatedWater;
							System.out.println("선택하신 제품이 나왔습니다.");
							System.out.println("제품의 금액은 "+carbonatedWater+"원 이고 반환금은 "+sum+"원 입니다.");
							break;
						}
						else {
							System.out.println("금액이 "+(carbonatedWater-sum)+"원 모자릅니다.");
							break;
						}
					case 10:
						if(sum >= water) {
							sum = sum - water;
							System.out.println("선택하신 제품이 나왔습니다.");
							System.out.println("제품의 금액은 "+water+"원 이고 반환금은 "+sum+"원 입니다.");
							break;
						}
						else {
							System.out.println("금액이 "+(water-sum)+"원 모자릅니다.");
							break;
						}
					default:
						System.out.println("선택하신 제품이 없습니다.");
						System.out.println("투입하신 "+sum+" 원은 반환됩니다.");
						break;
					}
		
				}while(true);
			
			}
			
			// 상품구매 여부 반복
			System.out.println("추가로 상품을 더 구매하시겠습니까?(Y/N)");
			additionalPurchase = input.next().charAt(0);
				
			if(additionalPurchase == 'N' || additionalPurchase == 'n') {
				System.out.println("프로그램을 종료합니다.");
				
			}
			if(additionalPurchase == 'Y' || additionalPurchase == 'y') {
				System.out.println("남은 금액은 "+sum+"원 입니다.");
			}
			else {
				System.out.println("버튼을 잘못 누르셨습니다.");
				System.out.println("다시 눌러주세요");
			}
			
		
			
	}

}
